{
  "name": "data-works-usb-link",
  "version": "1.0.0",
  "description": "Connect an Arduino to Data Works with USB.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --mode production --config ./config/webpack.config.js",
    "buildDev": "webpack --mode development --config ./config/webpack.config.dev.js",
    "buildRun": "npm run buildDev && npm run start",
    "pack": "build",
    "lint": "eslint . --ext .js,.jsx",
    "lintFix": "eslint . --ext .js,.jsx --fix",
    "test": "jest",
    "postinstall": "electron-builder install-app-deps"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-transition-group": "^2.5.0",
    "serialport": "^7.1.0",
    "socket.io-client": "^2.2.0",
    "typeface-quicksand": "0.0.54"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.1",
    "electron": "^3.0.10",
    "electron-builder": "^20.38.2",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^2.0.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "eslintConfig": {
    "plugins": [
      "jest"
    ],
    "env": {
      "jest": true
    },
    "extends": [
      "standard",
      "standard-react"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "build": {
    "appId": "com.dataworks.link",
    "productName": "Data Works USB Link",
    "win": {
      "target": "portable"
    }
  },
  "jest": {
    "setupFiles": [
      "./config/jest/jestSetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/fileMock.js",
      "\\.(css|less)$": "<rootDir>/config/jest/styleMock.js"
    }
  }
}
